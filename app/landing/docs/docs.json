{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Stellar Tools",
  "description": "Drop-in payment adapters for your stack. Accept fast, low-cost crypto payments in minutes.",
  "colors": {
    "primary": "#7c3aed",
    "light": "#a78bfa",
    "dark": "#6d28d9"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": ["index", "quickstart", "development"]
          },
          {
            "group": "Customization",
            "pages": ["essentials/settings", "essentials/navigation"]
          },
          {
            "group": "Writing content",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "AI tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          },
          {
            "group": "Adapters",
            "pages": [
              "adapters/overview",
              "adapters/medusajs",
              "adapters/betterauth",
              "adapters/uploadthing",
              "adapters/langchain",
              "adapters/aisdk"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "Overview",
            "pages": ["api-reference/introduction"]
          },
          {
            "group": "Resources",
            "pages": [
              "api-reference/checkout",
              "api-reference/customers",
              "api-reference/webhooks",
              "api-reference/subscriptions",
              "api-reference/payments",
              "api-reference/refunds",
              "api-reference/products",
              "api-reference/payout"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "/docs",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Home",
          "href": "/",
          "icon": "house"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:hi@usepaykit.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Sign Up Free",
      "href": "/signup"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/usepaykit",
      "github": "https://github.com/usepaykit/stellar-tools"
    }
  }
}
